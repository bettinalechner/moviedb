<div class="panel-heading">
    <h1 class="panel-title">Movies</h1>
</div>
<div class="panel-body">
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th></th>
            <th></th>
        </tr>
        <% @movies.each do |movie| %>
            <tr>
                <td><%= link_to movie.title, movie %></td>
                <td><%= link_to movie.year, movie %></td>
                <td>Edit</td>
                <td>
                    <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: "Are you sure you want to delete #{movie.title}?" } %>
                </td>
            </tr>
        <% end %>
    </table>
</div>